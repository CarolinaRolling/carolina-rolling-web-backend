# Database (Heroku provides DATABASE_URL automatically)
DATABASE_URL=postgres://user:password@localhost:5432/shipment_tracker

# Server
PORT=3000
NODE_ENV=development

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Cloudinary (for permanent photo storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email notifications (optional - if not set, emails won't be sent)
# For Gmail: use smtp.gmail.com with an App Password
# Get App Password from: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com
